<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Health">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/f1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:src="@drawable/pmssy"
                                    android:scaleType="fitXY"
                                    />

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:text="Pradhan Mantri Swasthya Suraksha Yojana (PMSSY)"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp" />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view1"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:text="Pradhan Mantri Swasthya Suraksha Yojana (PMSSY)"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="20dp"/>

                                <TextView
                                    android:id="@+id/txt2"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:text="The Pradhan Mantri Swasthya Suraksha Yojana (PMSSY) aims at correcting the imbalances in the availability of affordable healthcare facilities"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="17sp"
                                    android:layout_marginLeft="17dp"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="-30dp"/>

                                <Button
                                    android:id="@+id/b1"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:text="Know More"
                                    />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                </ViewFlipper>


                <ViewFlipper
                    android:id="@+id/f2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view3"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image3"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:src="@drawable/nrhm"
                                    android:scaleType="fitXY"
                                    />

                                <TextView
                                    android:id="@+id/txt3"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:textColor="@color/white"
                                    android:text="National Rural Health Mission (NRHM)"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view4"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt4"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:textColor="@color/white"
                                    android:text="National Rural Health Mission (NRHM):"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"/>

                                <TextView
                                    android:id="@+id/txt7"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:text="The National Rural Health Mission (NRHM) was launched on 12th April 2005, to provide accessible, affordable and quality health care to the rural population, especially the vulnerable groups."
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="17dp"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="-45dp"/>

                                <Button
                                    android:id="@+id/b2"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:text="Know More"

                                    />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                </ViewFlipper>


                <ViewFlipper
                    android:id="@+id/f3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view5"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image5"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:src="@drawable/rsby"
                                    android:scaleType="fitXY"
                                    />

                                <TextView
                                    android:id="@+id/txt5"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:textColor="@color/white"
                                    android:text="Rashtriya Swasthya Bima Yojana"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <android.support.v7.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card_view6"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            card_view:cardCornerRadius="9dp"
                            android:layout_gravity="center"
                            card_view:cardElevation="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            card_view:cardBackgroundColor="@color/colorPrimaryDark"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt6"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:textColor="@color/white"
                                    android:text="Rashtriya Swasthya Bima Yojana"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:layout_marginTop="20dp"/>


                                <TextView
                                    android:id="@+id/txt8"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:text="Rashtriya Swasthya Bima Yojana (RSBY) National Health Insurance  is a government-run health insurance programme for the Indian poor."
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="17dp"
                                    android:layout_marginRight="17dp"
                                    android:layout_marginTop="-45dp"/>

                                <Button
                                    android:id="@+id/b3"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:text="Know More"
                                    />

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                </ViewFlipper>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>